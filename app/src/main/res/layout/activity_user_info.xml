    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProfileImage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconImageUser"
                android:layout_marginLeft="20dp"
                android:layout_width="55dp"
                android:layout_height="70dp"
                android:src="@drawable/infomation" />

            <EditText
                android:id="@+id/edtProfileUserName"
                android:layout_width="230dp"
                android:layout_marginLeft="17dp"
                android:layout_height="55dp"
                android:text="Họ tên"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconEmailUser"
                android:layout_width="90dp"
                android:layout_height="57dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/mail" />
            <EditText
                android:id="@+id/edtProfileUserMail"
                android:layout_width="230dp"
                android:layout_height="57dp"
                android:layout_marginLeft="3dp"
                android:text="Mail"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconPhoneUser"
                android:layout_width="50dp"
                android:layout_marginLeft="22dp"
                android:layout_height="50dp"
                android:src="@drawable/userphone" />

            <EditText
                android:id="@+id/edtProfileUserPhone"
                android:layout_width="230dp"
                android:layout_marginLeft="27dp"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconDateUser"
                android:layout_width="50dp"
                android:layout_marginLeft="22dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_year" />

            <EditText
                android:id="@+id/edtProfileUserDate"
                android:layout_width="230dp"
                android:layout_marginLeft="27dp"
                android:layout_height="wrap_content"
                android:text="Năm"
                android:textSize="25dp"
                android:textStyle="bold"  />
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.316">

        <Button
            android:id="@+id/btnChaneInfoProfile"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#AE2A2F"
            android:text="Thay đổi thông tin"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnChangePassUser"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#AE2A2F"
        android:text="Thay đổi mật khẩu"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>