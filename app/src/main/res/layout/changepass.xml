<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:layout_margin="50dp"
    android:background="@drawable/rounddialog"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toprounddialog"
        android:gravity="center"
        android:padding="10dp"
        android:text="Cập nhật mật khẩu"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtTenDL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:hint="Nhập mật khẩu cũ"
        android:padding="15dp" />

    <EditText
        android:id="@+id/edtFogotMK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:hint="Nhập mật khẩu"
        android:padding="15dp" />
    <EditText
        android:id="@+id/edtFogotMK1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:hint="Nhập lại mật khẩu"
        android:padding="15dp" />

    <Button
        android:id="@+id/btnLuuMK"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#AE2A2F"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white" />
</LinearLayout>